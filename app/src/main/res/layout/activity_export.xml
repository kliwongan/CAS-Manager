<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/export_container">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/export_filename"
            android:hint="Enter export file name"
            android:textColor="@color/menuFontColor"
            android:background="?attr/editTextBackground"
            android:layout_toRightOf="@+id/duration"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/export_filename"
            android:text="EXPORT"
            android:id="@+id/export_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/export_preview"
            android:layout_below="@id/export_btn"/>

    </RelativeLayout>

</RelativeLayout>